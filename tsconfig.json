{
    "compilerOptions": {
        "target": "es2021", // transpile down to ES2021
        "module": "commonjs", // or "esnext", "amd", etc.
        "lib": [
            "es2021"
        ], // only the ES2021 standard library
        "typeRoots": [
            "./node_modules/@types", // default type packages
            "src/helper/types" // your custom .d.ts files
        ],
        "resolveJsonModule": true, // allow `import data from './foo.json'`
        "esModuleInterop": true, // default-import compatibility
        "strict": true, // all strict mode checks
        "strictNullChecks": true, // disable strict null checks
        "noImplicitAny": true, // allow implicit any
        "forceConsistentCasingInFileNames": true, // consistent imports
        "skipLibCheck": true, // skip type-checking .d.ts files
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "noEmitOnError": true
    },
    "include": [
        "src/**/*"
    ]
    ,
    "exclude": [
      "node_modules",
      "dist",
      "test-results"
    ]
}