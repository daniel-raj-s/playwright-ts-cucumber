# Application and API URLs
TokenURL=https://your-auth-endpoint/oauth/token
SECRET=your_api_client_secret

# Database (if used in tests)
PROD_DB_HOST=localhost
PROD_DB_PORT=5432
PROD_DB_NAME=your_db_name
PROD_DB_USER=your_db_user
PROD_DB_PASSWORD=your_db_password

# Reporting
REPORT_DIR=test-results            # Directory for test reports

# Other environment flags
ENV=dev

# Playback configuration
SLOWMO=0                     # ms of slow motion (0 for none)
DEVTOOLS=false               # true to open browser devtools
HEADLESS=true              # true to run tests in headless mode

# Reporting directory
RESULTS_DIR=test-results     # Base results directory

# Project metadata
PROJECT_NAME=Test Automation
RELEASE=1.0
CYCLE=Smoke-1

# API endpoints (aliases)
BASE_URL=https://practicetestautomation.com/practice-test-login/
API_BASE_URI=https://jsonplaceholder.typicode.com

# Parallelism and tag filtering
PARALLEL=2                   # Number of parallel test runners
TAGS=@ui or @api             # Default tags for CI

# Dynamic test data file
DYNAMIC_TEST_DATA_PATH=src/test/TestData/testData.json